<h2>Borrowed Books</h2>
<table class="table">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Borrowed Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.BorrowedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Return" asp-route-id="@item.Id" class="btn btn-success">Mark as Returned</a>
                </td>
            </tr>
        }
    </tbody>
</table>
